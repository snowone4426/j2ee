<% 
class Path {
	String pathStr;
	Path () {
		pathStr="path";
	}
	
	public void setPathStr (String path) {
		pathStr = path;
	}
}
Path path = new Path();
%>
<jsp:include page="header.jsp" />
<button onclick={<% path.setPathStr("main"); %>}><%= path.pathStr %></button>
<jsp:include page="footer.jsp" />
