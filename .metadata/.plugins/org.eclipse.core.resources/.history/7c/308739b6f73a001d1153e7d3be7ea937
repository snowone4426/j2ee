  <script>
  const signUp = () => {
	  document.querySelector('#regform').style.display = 'none';
	  document.querySelector('#rname').innerHTML = document.form1.name.value;
	  document.querySelector('#remail').innerHTML = document.form1.email.value;
	  document.querySelector('#result').setAttribute('style','display:block; background-color:blue');
	 
  }
  </script>
